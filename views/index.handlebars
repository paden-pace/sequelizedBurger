<div class="body">
<div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-8">
        <img src="./../assets/img/burgertime.jpg" alt="BurgerTime" height="200px" width="100%">
    </div>
    <div class="col-lg-2">
    </div>
</div>


<div class="row">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-3">
        <h2>Existing Burgers!</h2>

        <ul>
        {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour!</button>
                </form>

                {{!--{{> burgers/delete-burger}}--}}
            </li>
            {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-lg-1">
    </div>
    <div class="col-lg-2 col2">

        <h2>Add a Burger!</h2>
        <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
            <label for="burg">New Burger:</label>
            <input type="text" id="burg" name="burger_name">
        </div>

        {{!--<div class="form-group">
            <label for="slee">Sleepy?</label><br>
            <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
            <input type="radio" name="sleepy" value="0"> Awake
        </div>--}}

        <button type="submit">Add The Burger</button>
        </form>
    </div>
    <div class="col-lg-1">
    </div>
    <div class="col-lg-3">

        <h2>Burgers that have been eaten!</h2>

        <ul>
        {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Make Another!</button>
                </form>

                {{!--{{> burgers/delete-burger}}--}}
            </li>
            {{/if}}
        {{/each}}
        </ul>

    </div>
    <div class="col-lg-1">
    </div>

</div>
<div class="body">